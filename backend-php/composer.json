{
    "name": "pm/backend-php",
    "description": "PHP Fallback Backend for PM Messaging App",
    "type": "project",
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "firebase/php-jwt": "^6.0",
        "mongodb/mongodb": "^1.15",
        "vlucas/phpdotenv": "^5.0",
        "tuupola/slim-jwt-auth": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "allow-plugins": {
            "slim/slim": true
        }
    }
}
